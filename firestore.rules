rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function: Check if user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // 1. Users collection - each user can only access their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // 2. Pets collection - accessible by owners
    match /pets/{petId} {
      // Anyone authenticated can read (needed for join requests)
      allow read: if isAuthenticated();

      // Create: authenticated user, must be in ownerIds
      allow create: if isAuthenticated() &&
                       request.resource.data.ownerIds.hasAny([request.auth.uid]);

      // Update: must be one of the owners
      allow update: if isAuthenticated() &&
                       (resource.data.ownerIds.hasAny([request.auth.uid]) ||
                        request.resource.data.ownerIds.hasAny([request.auth.uid]));

      // Delete: must be the creator
      allow delete: if isAuthenticated() &&
                       resource.data.createdBy == request.auth.uid;

      // Pet subcollections (logs, weight_logs)
      match /logs/{logId} {
        allow read: if isAuthenticated() &&
                       get(/databases/$(database)/documents/pets/$(petId)).data.ownerIds.hasAny([request.auth.uid]);
        allow create, update: if isAuthenticated() &&
                                 get(/databases/$(database)/documents/pets/$(petId)).data.ownerIds.hasAny([request.auth.uid]) &&
                                 request.resource.data.timestamp is number;
        allow delete: if isAuthenticated() &&
                         get(/databases/$(database)/documents/pets/$(petId)).data.ownerIds.hasAny([request.auth.uid]);
      }

      match /weight_logs/{logId} {
        allow read: if isAuthenticated() &&
                       get(/databases/$(database)/documents/pets/$(petId)).data.ownerIds.hasAny([request.auth.uid]);
        allow create, update: if isAuthenticated() &&
                                 get(/databases/$(database)/documents/pets/$(petId)).data.ownerIds.hasAny([request.auth.uid]) &&
                                 request.resource.data.timestamp is number;
        allow delete: if isAuthenticated() &&
                         get(/databases/$(database)/documents/pets/$(petId)).data.ownerIds.hasAny([request.auth.uid]);
      }
    }

    // 3. Care requests collection
    match /care_requests/{requestId} {
      // Read: requester or owner of the pet
      allow read: if isAuthenticated() &&
                     (resource.data.requesterId == request.auth.uid ||
                      resource.data.ownerId == request.auth.uid);

      // Create: authenticated user creating their own request
      allow create: if isAuthenticated() &&
                       request.resource.data.requesterId == request.auth.uid;

      // Update: only the pet owner can respond
      allow update: if isAuthenticated() &&
                       resource.data.ownerId == request.auth.uid;

      // Delete: requester or owner
      allow delete: if isAuthenticated() &&
                       (resource.data.requesterId == request.auth.uid ||
                        resource.data.ownerId == request.auth.uid);
    }

    // 4. Legacy collections (for backward compatibility during migration)
    // These can be removed after migration is complete
    match /logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    match /weight_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    match /app_profile/{docId} {
      allow read, write: if isAuthenticated();
    }

    // 5. Deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
